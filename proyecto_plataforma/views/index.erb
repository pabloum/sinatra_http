
<h1>Hola! Bienvenido a tu lista de tareas. </h1>


<h2>Estas son tus tareas completadas</h2>

<% @tareas.each do |i| %>
  <% if i["done"] == true %>
    <% id = i["id"]  %>
    <% title = i["title"]  %>
    <% done = i["done"] %>
    <% created_at = i["created_at"] %>
    <% updated_at = i["updated_at"] %>
    <%= "Título: #{title}" %>
    <br>
    <%= "ID: #{id}" %>
    <br>
    <%= "Estado: #{done}" %>
    <br>
    <%= "Fecha creación: #{created_at}" %>
    <br>
    <%= "Fecha de actualización: #{updated_at}" %>
    <br>
    <br>
  <% end %>
<% end %>


<h2>Estas son tus tareas por completar</h2>

<% @tareas.each do |i| %>
  <% if i["done"]==false %>
    <% id = i["id"]  %>
    <% title = i["title"]  %>
    <% done = i["done"] %>
    <% created_at = i["created_at"] %>
    <% updated_at = i["updated_at"] %>
    <%= "Título: #{title}" %>
    <br>
    <%= "ID: #{id}" %>
    <br>
    <%= "Estado: #{done}" %>
    <br>
    <%= "Fecha creación: #{created_at}" %>
    <br>
    <%= "Fecha de actualización: #{updated_at}" %>
    <br>
    <br>
  <% end %>
<% end %>

<p><strong>¿Qué desea hacer?</strong></p>

<form class="" action="/create" method="post">
  <input type="text" name="titulo" placeholder="Titulo de la nueva tarea">
  <input type="submit" name="" value="Crear tarea">
</form>

<form class="" action="/complete" method="post">
  <input type="text" name="id" placeholder="id de la tarea a terminar">
  <input type="submit" name="" value="Completar tarea">
</form>

<form class="" action="/find" method="post">
  <input type="text" name="id" placeholder="id de la tarea a buscar">
  <input type="submit" name="" value="Buscar tarea">
</form>

<form class="" action="/delete" method="post">
  <input type="text" name="id" placeholder="id de la tarea a eliminar">
  <input type="submit" name="" value="Borrar tarea">
</form>
